<controls:NavigateableControl x:Class="BSE.CoverFlow.WPFLib.Pages.PageQuickplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:BSE.CoverFlow.WPFLib.Controls"
             xmlns:imageFlow="clr-namespace:BSE.Wpf.Windows.Controls.ImageFlow;assembly=BSE.Wpf.Windows.Controls"
                              xmlns:widgets="clr-namespace:BSE.CoverFlow.WPFLib.Widgets"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:my="clr-namespace:BSE.CoverFlow.WPFLib.ImageFlowPanel"
             mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="500" >
    <controls:NavigateableControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/Black.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:NavigateableControl.Resources>
    
    <Grid>
        <imageFlow:ImageFlowPanel x:Name="ImageFlowPanel" CacheDirectoryInfo="{Binding ImageFlowCache}" Background="{StaticResource WindowBackgroundBrush}" ItemsSource="{Binding Covers}" SelectedCoverFlowItem="{Binding SelectedImageFlowItem}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="SelectedItemMouseDoubleClick">
                    <i:InvokeCommandAction Command="{Binding SelectedItemCommand}" CommandParameter="{Binding SelectedItem, ElementName=ImageFlowPanel}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </imageFlow:ImageFlowPanel>
        <DockPanel Margin="50,66,50,0" Height="220" VerticalAlignment="Top">
            <widgets:NewAlbums HorizontalAlignment="Left" DataContext="{Binding NewAlbumsViewModel}" />
            <widgets:History HorizontalAlignment="Right"  DataContext="{Binding HistoryViewModel}"/>
        </DockPanel>
    </Grid>
</controls:NavigateableControl>
