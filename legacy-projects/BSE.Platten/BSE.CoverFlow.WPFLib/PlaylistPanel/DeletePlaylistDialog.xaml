<controls:Dialog x:Class="BSE.CoverFlow.WPFLib.PlaylistPanel.DeletePlaylistDialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:viewmodels="clr-namespace:BSE.CoverFlow.WPFLib.ViewModel"
                 xmlns:controls="clr-namespace:BSE.CoverFlow.WPFLib.Controls"
                 xmlns:p="clr-namespace:BSE.CoverFlow.WPFLib.Properties"
                 mc:Ignorable="d" Height="200" Width="400" 
                 DialogOkCommand="{Binding DialogOkCommand}"
                 DialogCancelCommand="{Binding DialogCancelCommand}"
                 Title="{x:Static p:Resources.IDS_DeletePlaylistDialogHeader}">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <TextBlock FontWeight="SemiBold" Text="{Binding Path=DeletePlaylistConfirmation}" TextWrapping="WrapWithOverflow" />
        </StackPanel>
    </Grid>
</controls:Dialog>
