<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="BSE.CoverFlow.WPFLib.PlayerPanel.Player"
    xmlns:local="clr-namespace:BSE.CoverFlow.WPFLib.PlayerPanel"
    xmlns:service="clr-namespace:BSE.CoverFlow.WPFLib.Services"
    xmlns:controls="clr-namespace:BSE.CoverFlow.WPFLib.Controls"
    xmlns:bsewpf="clr-namespace:BSE.Wpf.Windows.Controls;assembly=BSE.Wpf.Windows.Controls"
    xmlns:drives="clr-namespace:BSE.Wpf.RemovableDrives;assembly=BSE.Wpf.RemovableDrives"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    service:DialogService.IsRegisteredView="True"
    mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="60"
    IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Player}},  Path=IsHostAvailable}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/Black.xaml" />
                <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Resources/PlayerInfoPanelButton.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <local:PlayModeRandomToBooleanConverter x:Key="PlayModeRandomToBooleanConverter"/>
            <local:PlayModeCdToBooleanConverter x:Key="PlayModeCdToBooleanConverter"/>
            <local:PlayModeSongToBooleanConverter x:Key="PlayModeSongToBooleanConverter"/>
            <local:PlayModePlaylistToBooleanConverter x:Key="PlayModePlaylistToBooleanConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Border Background="#abbbd3" BorderThickness="0,1,0,1">
            <DockPanel Background="{StaticResource PlayerBackground}">
                <controls:PlayerInfoPanel HorizontalAlignment="Left" Width="60" Margin="10,5">
                    <WrapPanel>
                        <drives:RemovableDeviceControllerButton x:Name="RemovableDrive"
                                                                DropDownPlacementMode="Top"
                                                                Style="{DynamicResource PlayerInfoPanelToggleButton}"
                                                                ToolTip="Removable Audio Drives"
                                                                DriveSelected="OnRemovableDriveDriveSelected"
                                                                DriveRemoved="OnRemovableDriveDriveRemoved"
                                                                DriveAdded="OnRemovableDriveDriveAdded">
                            <drives:RemovableDeviceControllerButton.Content>
                                <Image>
                                    <Image.Style>
                                        <Style TargetType="Image">
                                            <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/usb.png" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=RemovableDrive, Path=IsEnabled}" Value="False">
                                                    <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/usb_disabled.png" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Image.Style>
                                </Image>
                            </drives:RemovableDeviceControllerButton.Content>
                        </drives:RemovableDeviceControllerButton>
                        <Label x:Name="LabelCheckHost"
                               Style="{DynamicResource PlayerInfoPanelLabel}"
                               IsEnabled="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:Player}},  Path=IsHostAvailable}">
                            <Image>
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/network.png" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=LabelCheckHost, Path=IsEnabled}" Value="False">
                                                <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/network_disabled.png" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </Label>
                    </WrapPanel>
                </controls:PlayerInfoPanel>

                <controls:PlayerInfoPanel HorizontalAlignment="Left" Width="Auto" Margin="10,5" Height="41"  InfoPanelViewMode="ControllerPanel">
                    <StackPanel Orientation="Horizontal">
                        <ToggleButton x:Name="BtnRandomMode"
                                      Style="{DynamicResource PlayerInfoPanelControllerToggleButton}"
                                      Command="{Binding PlayRandomCommand}"
                                      IsChecked="{Binding Path=PlayMode, Converter={StaticResource PlayModeRandomToBooleanConverter}}">
                            <Image Height="24" >
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/random1.png" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=BtnRandomMode, Path=IsChecked}" Value="True">
                                                <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/random1.png" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </ToggleButton>
                        <bsewpf:DropDownButton x:Name="ButtonPlaylistMode" 
                                                       Style="{DynamicResource PlayerInfoPanelControllerToggleButton}"
                                                       DropDownPlacementMode="Top"
                                               IsEnabled="{Binding HasPlaylists}"
                                                       IsChecked="{Binding Path=PlayMode, Converter={StaticResource PlayModePlaylistToBooleanConverter}}">
                            <bsewpf:DropDownButton.DropDownContextMenu>
                                <ContextMenu ItemsSource="{Binding Playlists}">
                                    <ContextMenu.ItemContainerStyle>
                                        <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource {x:Type MenuItem}}">
                                            <Setter Property="Command" Value="{Binding DataContext.PlayPlaylistCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"/>
                                            <Setter Property="CommandParameter" Value="{Binding}"/>
                                            <Setter Property="HeaderTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <Binding Path="Name"></Binding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ContextMenu.ItemContainerStyle>
                                </ContextMenu>
                            </bsewpf:DropDownButton.DropDownContextMenu>
                            <Image Width="26" Height="26">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/playlist.png" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=ButtonPlaylistMode, Path=IsChecked}" Value="True">
                                                <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/playlist.png" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </bsewpf:DropDownButton>
                        <ToggleButton x:Name="BtnCdMode"
                                      Style="{DynamicResource PlayerInfoPanelControllerToggleButton}"
                                      IsChecked="{Binding Path=PlayMode, Converter={StaticResource PlayModeCdToBooleanConverter}}"
                                      Command="{Binding PlayCDCommand}"
                                      CommandParameter="{Binding CurrentAlbum}">
                            <Image Height="22" Width="22">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/artist2.png" />
                                    </Style>
                                </Image.Style>
                            </Image>
                        </ToggleButton>
                        <bsewpf:DropDownButton x:Name="ButtonSongMode" 
                                                       Style="{DynamicResource PlayerInfoPanelControllerToggleButton}"
                                                       DropDownPlacementMode="Top"
                                                       IsChecked="{Binding Path=PlayMode, Converter={StaticResource PlayModeSongToBooleanConverter}}">
                            <bsewpf:DropDownButton.DropDownContextMenu>
                                <ContextMenu ItemsSource="{Binding Path=CurrentAlbum.Tracks}" >
                                    <ContextMenu.ItemContainerStyle>
                                        <Style TargetType="{x:Type MenuItem}" BasedOn="{StaticResource {x:Type MenuItem}}">
                                            <Setter Property="Command" Value="{Binding DataContext.PlaySongCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type UserControl}}}"/>
                                            <Setter Property="CommandParameter" Value="{Binding}"/>
                                            <Setter Property="HeaderTemplate">
                                                <Setter.Value>
                                                    <DataTemplate>
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0:00}  {1}  ({2})">
                                                                    <Binding Path="TrackNumber"></Binding>
                                                                    <Binding Path="Title"></Binding>
                                                                    <Binding Path="Duration"></Binding>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ContextMenu.ItemContainerStyle>
                                </ContextMenu>
                            </bsewpf:DropDownButton.DropDownContextMenu>
                            <Image Width="26" Height="26">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/song.png" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=ButtonPlaylistMode, Path=IsChecked}" Value="True">
                                                <Setter Property="Source" Value="/BSE.CoverFlow.WPFLib;component/Images/song.png" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </bsewpf:DropDownButton>
                        
                    </StackPanel>
                </controls:PlayerInfoPanel>

                <local:PlayerButtonPanel x:Name="ButtonPanel" Margin="10,0"  HorizontalAlignment="Left" Width="192" Height="54"/>

                <controls:PlayerInfoPanel HorizontalAlignment="Left" Width="300" Margin="10,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Margin="2" x:Name="CurrentTitle" Text="{Binding CurrentTitle}" HorizontalAlignment="Center" Foreground="White" TextTrimming="CharacterEllipsis"/>
                        <TextBlock Grid.Row="1" Margin="2,0" x:Name="CurrentTime" Text="{Binding CurrentProgressTime}" FontSize="14" HorizontalAlignment="Center" Foreground="White" TextTrimming="CharacterEllipsis"/>
                    </Grid>
                </controls:PlayerInfoPanel>
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Width="Auto" Margin="10,0">
                    <controls:Slider Height="Auto" x:Name="slider1" IsEnabled="False" HorizontalAlignment="Right" Margin="5,0,5,0" Width="140" />
                    <controls:Slider Height="Auto"
                                     IsEnabled="{Binding IsPlaying}"
                                     Maximum="{Binding ProgressMaximumValue}"
                                     Value="{Binding ProgressValue}"
                               IsProgressVisible="{Binding IsPlaying}"
                               x:Name="TrackProgressSlider"
                               Margin="5,0,5,0">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="DragStarted">
                                <i:InvokeCommandAction Command="{Binding ProgressSliderDragStartedCommand}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="DragCompleted">
                                <i:InvokeCommandAction Command="{Binding ProgressSliderDragCompletedCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </controls:Slider>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>