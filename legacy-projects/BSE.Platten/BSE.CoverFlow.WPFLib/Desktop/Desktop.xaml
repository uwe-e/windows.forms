                              Command="{Binding SwitchToQuickplayCommand, Mode=Default}">
                    <TextBlock Text="Quickplay" FontFamily="Segoe WP" FontSize="24" FontWeight="Light" Foreground="{StaticResource WhiteColorBrush}" VerticalAlignment="Stretch"></TextBlock>
                </ToggleButton>
                <ToggleButton x:Name="ButtonCollectionView"
