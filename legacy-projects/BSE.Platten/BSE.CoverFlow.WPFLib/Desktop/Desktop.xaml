        <!--<pages:PageQuickplay Grid.Column="0" Grid.Row="1" DataContext="{Binding QuickplayViewModel}"
                             Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
        <pages:PageCollection x:Name="CollectionView" Grid.Column="0" Grid.Row="1" DataContext="{Binding CollectionViewModel}"
                              Visibility="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>-->
        <player:Player Grid.Column="0" Grid.Row="1" DataContext="{Binding PlayerManagerViewModel}"/>
        <!--<ContentControl Content="{Binding Path=Pages}" Grid.Column="0" Grid.Row="3" ContentTemplate="{StaticResource WorkspacesTemplate}"/>-->

        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0">
                <DockPanel>
                    <Rectangle DockPanel.Dock="Left" Width="15" Height="50" Margin="0,0,0,-30">
                        <Rectangle.Fill>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFf10da1" Offset="0"/>
                                <GradientStop Color="#FFe95214" Offset="1"/>
                            </LinearGradientBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                    <Button Content="Back" Width="25" Margin="12,2,12,2"
                    Style="{StaticResource HistoryButtonStyle}"
                    Command="{Binding HistoryBackCommand}" HorizontalAlignment="Left" />
                </DockPanel>
            </Border>

            <controls:PageTabControl Grid.Row="1" ItemsSource="{Binding Pages}"
                                     IsSynchronizedWithCurrentItem="true">
                <controls:PageTabControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Header}"/>
                    </DataTemplate>
                </controls:PageTabControl.ItemTemplate>
            </controls:PageTabControl>

        </Grid>

    </Grid>
</UserControl>
