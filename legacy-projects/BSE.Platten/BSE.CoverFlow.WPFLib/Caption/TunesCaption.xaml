<UserControl x:Class="BSE.CoverFlow.WPFLib.Caption.TunesCaption"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:BSE_Wpf_Controls="clr-namespace:BSE.Wpf.Windows.Controls;assembly=BSE.Wpf.Windows.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="30">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/Black.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="WindowHeader" Height="Auto" Margin="0,0,5,0">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Stretch">
            <Button VerticalAlignment="Stretch" Style="{StaticResource MetroButtonStyle}" Command="{Binding Path=OpenAdministrationCommand, Mode=Default}">
                <TextBlock Text="BSEadmin" Foreground="{StaticResource WhiteColorBrush}" VerticalAlignment="Stretch"></TextBlock>
            </Button>
            <TextBlock Margin="5,0,5,0" Text="|" Foreground="{StaticResource WhiteColorBrush}" Opacity="0.5" VerticalAlignment="Center" />
            <BSE_Wpf_Controls:DropDownButton Name="Filter" VerticalAlignment="Stretch" Foreground="{StaticResource WhiteColorBrush}" Style="{StaticResource MetroSplitButtonStyle}">
                <TextBlock Text="{Binding MenuHeaderFilters}" Foreground="{StaticResource WhiteColorBrush}" Width="Auto"></TextBlock>
                <BSE_Wpf_Controls:DropDownButton.DropDownContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="MenuItemFilters" Header="{Binding FilterName}" Command="{Binding Path=OpenFiltersCommand, Mode=Default}"/>
                    </ContextMenu>
                </BSE_Wpf_Controls:DropDownButton.DropDownContextMenu>
            </BSE_Wpf_Controls:DropDownButton>
            <TextBlock Margin="5,0,5,0" Text="|" Opacity="0.5" Foreground="{StaticResource WhiteColorBrush}" VerticalAlignment="Center" />
            <BSE_Wpf_Controls:DropDownButton Name="Extras" VerticalAlignment="Stretch" Foreground="{StaticResource WhiteColorBrush}" Style="{StaticResource MetroSplitButtonStyle}">
                <TextBlock Text="{Binding MenuHeaderExtras}" Foreground="{StaticResource WhiteColorBrush}"></TextBlock>
                <BSE_Wpf_Controls:DropDownButton.DropDownContextMenu>
                    <ContextMenu>
                        <MenuItem x:Name="MenuItemSettings" Header="{Binding MenuItemFiltersSettings}" Command="{Binding Path=OpenSettingsCommand, Mode=Default}"/>
                        <MenuItem x:Name="MenuItemStatistics" Header="{Binding MenuItemFiltersStatistics}" Command="{Binding Path=OpenStatisticsCommand, Mode=Default}"/>
                    </ContextMenu>
                </BSE_Wpf_Controls:DropDownButton.DropDownContextMenu>
            </BSE_Wpf_Controls:DropDownButton>
        </StackPanel>
    </Grid>
</UserControl>
