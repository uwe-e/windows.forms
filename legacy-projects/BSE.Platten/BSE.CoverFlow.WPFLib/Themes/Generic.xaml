<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodels="clr-namespace:BSE.CoverFlow.WPFLib.ViewModel"
                    xmlns:playlist="clr-namespace:BSE.CoverFlow.WPFLib.PlaylistPanel"
                    xmlns:artists="clr-namespace:BSE.CoverFlow.WPFLib.ArtistPanel"
                    xmlns:album="clr-namespace:BSE.CoverFlow.WPFLib.AlbumPanel"
                    xmlns:pages="clr-namespace:BSE.CoverFlow.WPFLib.Pages"
                    xmlns:player="clr-namespace:BSE.CoverFlow.WPFLib.PlayerPanel"
                    xmlns:widgets="clr-namespace:BSE.CoverFlow.WPFLib.Widgets">
    
    <ResourceDictionary.MergedDictionaries>
        
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/PlayerInfoPanel.Generic.xaml"/>
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/TwoStateButton.Generic.xaml"/>
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/PlayerButton.Generic.xaml"/>
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/Slider.Generic.xaml"/>
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Resources/Dialog.Generic.xaml"/>
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/MessageWindow.Generic.xaml"/>
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/NavigateableControl.Generics.xaml"/>
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/TilePanel.Generic.xaml"/>
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/ExpanderTabControl.Generic.xaml"/>
        <ResourceDictionary Source="/BSE.CoverFlow.WPFLib;component/Themes/PageTabControl.Generic.xaml"/>
        
    </ResourceDictionary.MergedDictionaries>

    <DataTemplate DataType="{x:Type viewmodels:PlaylistViewModel}">
        <playlist:Playlist/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:NewPlaylistDialogViewModel}">
        <playlist:NewPlaylistDialog/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:DeletePlaylistDialogViewModel}">
        <playlist:DeletePlaylistDialog/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:PageQuickplayViewModel}">
        <pages:PageQuickplay/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:PageCollectionViewModel}">
        <pages:PageCollection/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:ArtistTreeViewModel}">
        <artists:ArtistTree/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:AlbumPanelViewModel}">
        <album:PropertiesPanel/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:PlayerManagerViewModel}">
        <player:Player/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:NewAlbumsViewModel}">
        <widgets:NewAlbums/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:HistoryViewModel}">
        <widgets:History/>
    </DataTemplate>

    <!--<DataTemplate x:Key="TabItemHeaderTemplate">
        <TextBlock Text="{Binding Header}"/>
    </DataTemplate>

    <DataTemplate x:Key="WorkspacesTemplate">
        <TabControl 
      IsSynchronizedWithCurrentItem="True" 
      ItemsSource="{Binding}" 
      ItemTemplate="{StaticResource TabItemHeaderTemplate}"
      Margin="4"
      />
    </DataTemplate>-->
</ResourceDictionary>