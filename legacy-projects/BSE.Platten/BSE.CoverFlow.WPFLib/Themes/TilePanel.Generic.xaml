<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BSE.CoverFlow.WPFLib.Controls"
                    xmlns:animation="clr-namespace:BSE.CoverFlow.WPFLib.Animation">

    <Style  TargetType="{x:Type controls:TilePanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type controls:TilePanel}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition x:Name="Part_UpperRow" Height="50*"/>
                                <RowDefinition x:Name="Part_LowerRow" Height="50*"/>
                            </Grid.RowDefinitions>
                            <ContentPresenter Grid.Row="0"/>
                            <ContentControl Grid.Row="1" x:Name="PART_ExpandableContent" />
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="False">
                            <Setter TargetName="Part_UpperRow" Property="Height" Value="*"/>
                            <Setter TargetName="Part_LowerRow" Property="Height" Value="Auto"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>