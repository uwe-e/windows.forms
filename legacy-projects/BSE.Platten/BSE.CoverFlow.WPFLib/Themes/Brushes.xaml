<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="{StaticResource ColorControlBackground}" />
    <SolidColorBrush x:Key="WhiteColorBrush" Color="#FFFFFFFF" />
    <SolidColorBrush x:Key="AccentColorBlueBrush" Color="{StaticResource AccentColorBlue}"/>
    <SolidColorBrush x:Key="HighlightBrush" Color="{StaticResource AccentColorBlue}" />

    <LinearGradientBrush x:Key="GradientBackgroundBrush" 
                         StartPoint="0.5,0"
                         EndPoint="0.5,1"
                         MappingMode="RelativeToBoundingBox">
        <GradientStop Color="White" Offset="0"/>
        <GradientStop Color="#FFf1f1f1" Offset="1"/>
    </LinearGradientBrush>

    <DropShadowEffect x:Key="DropShadowBrush" 
                      BlurRadius="10" 
                      RenderingBias="Performance" 
                      ShadowDepth="0" 
                      Opacity="1" 
                      Direction="2"/>

</ResourceDictionary>