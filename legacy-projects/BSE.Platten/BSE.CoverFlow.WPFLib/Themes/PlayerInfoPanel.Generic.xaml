<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:BSE.CoverFlow.WPFLib.Controls">
    <Style TargetType="{x:Type controls:PlayerInfoPanel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ContentControl}">
                    <Grid>
                        <Border x:Name="OuterBorder" Margin="0" BorderThickness="1" CornerRadius="7">
                            <Border.BorderBrush>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FF252A3A" Offset="0"/>
                                    <GradientStop Color="#FF676f8c" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border x:Name="InnerBorder" Margin="1" Background="#FF1f5fbc" BorderThickness="1" CornerRadius="7">
                                <Border.BorderBrush>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="#FF3d4455" Offset="0"/>
                                        <GradientStop Color="#FF191e2f" Offset="1"/>
                                    </LinearGradientBrush>
                                </Border.BorderBrush>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" CornerRadius="7,7,0,0">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" >
                                                <GradientStop Offset="0" Color="#40FFFFFF" />
                                                <GradientStop Color="#10FFFFFF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <Border x:Name="Upper" Grid.Row="0" CornerRadius="7,7,0,0">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1" >
                                                <GradientStop Offset="0" Color="#99FFFFFF" />
                                                <GradientStop Color="#11FFFFFF" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <Border x:Name="Lower" Grid.Row="1" CornerRadius="0,0,7,7">
                                        <Border.Background>
                                            <RadialGradientBrush Center="0.494,1.334" GradientOrigin="0.494,1.017" RadiusX="1.184" RadiusY="0.68">
                                                <GradientStop Color="#99FFFFFF"/>
                                                <GradientStop Color="#11FFFFFF" Offset="1"/>
                                            </RadialGradientBrush>
                                        </Border.Background>
                                    </Border>
                                    <ContentPresenter Margin="4" Grid.RowSpan="2"/>
                                </Grid>
                            </Border>
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="InfoPanelViewMode" Value="ControllerPanel">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ContentControl}">
                            <Grid>
                                <Border x:Name="OuterBorder" Margin="0" BorderThickness="1" CornerRadius="3">
                                    <Border.BorderBrush>
                                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                            <GradientStop Color="#FF252A3A" Offset="0"/>
                                            <GradientStop Color="#FF676f8c" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.BorderBrush>
                                    <!--<Border x:Name="InnerBorder" Margin="1" Background="#00000000" BorderThickness="1" CornerRadius="3">
                                        <Border.BorderBrush>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                <GradientStop Color="#FF3d4455" Offset="0"/>
                                                <GradientStop Color="#FF191e2f" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.BorderBrush>
                                        
                                    </Border>-->
                                    <ContentPresenter Margin="2"/>
                                </Border>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>